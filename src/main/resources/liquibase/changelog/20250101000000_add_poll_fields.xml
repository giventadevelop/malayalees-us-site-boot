<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="20250101-01-add-event-poll-fields" author="claude">
        <comment>Add missing fields to event_poll table: isAnonymous, allowMultipleChoices, maxResponsesPerUser, resultsVisibleTo</comment>

        <addColumn tableName="event_poll">
            <column name="is_anonymous" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="event_poll">
            <column name="allow_multiple_choices" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="event_poll">
            <column name="max_responses_per_user" type="integer" defaultValueNumeric="1">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="event_poll">
            <column name="results_visible_to" type="varchar(50)" defaultValue="'ALL'">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20250101-02-add-event-poll-response-fields" author="claude">
        <comment>Add missing fields to event_poll_response table: responseValue, isAnonymous</comment>

        <addColumn tableName="event_poll_response">
            <column name="response_value" type="varchar(1000)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="event_poll_response">
            <column name="is_anonymous" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20250101-03-add-poll-constraints" author="claude">
        <comment>Add check constraints for event_poll table to ensure data integrity</comment>

        <addCheckConstraint
            tableName="event_poll"
            constraintName="check_max_responses_positive"
            checkCondition="max_responses_per_user > 0"/>

        <addCheckConstraint
            tableName="event_poll"
            constraintName="check_poll_dates"
            checkCondition="(end_date IS NULL) OR (end_date >= start_date)"/>
    </changeSet>

</databaseChangeLog>
