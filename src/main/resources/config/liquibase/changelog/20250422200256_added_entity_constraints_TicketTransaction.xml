<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity TicketTransaction.
    -->
    <changeSet id="20250422200256-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="ticket_transaction"
                                 constraintName="fk_ticket_transaction__event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"
                                 />

        <addForeignKeyConstraint baseColumnNames="ticket_type_id"
                                 baseTableName="ticket_transaction"
                                 constraintName="fk_ticket_transaction__ticket_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ticket_type"
                                 />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="ticket_transaction"
                                 constraintName="fk_ticket_transaction__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"
                                 />
    </changeSet>
</databaseChangeLog>
