<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity PollResponse.
    -->
    <changeSet id="20250506194756-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="poll_id"
                                 baseTableName="poll_response"
                                 constraintName="fk_poll_response__poll_id"
                                 referencedColumnNames="id"
                                 referencedTableName="poll"
                                 />

        <addForeignKeyConstraint baseColumnNames="poll_option_id"
                                 baseTableName="poll_response"
                                 constraintName="fk_poll_response__poll_option_id"
                                 referencedColumnNames="id"
                                 referencedTableName="poll_option"
                                 />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="poll_response"
                                 constraintName="fk_poll_response__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"
                                 />
    </changeSet>
</databaseChangeLog>
